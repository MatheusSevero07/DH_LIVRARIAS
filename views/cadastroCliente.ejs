<%- include("./partials/header") %>

    <div class="container">

        <div class="cadastro_cliente">
            <h2>Crie sua conta</h2>

            <div class="already-user">
                <span  class="ng-scope">Já tem uma conta?</span>
                <a class="login-link" href="/login" >Faça seu login</a>
            </div>

            <form action="/cadastroEndereco" method="GET">

                <div class="cadastro">
                    <label for="nome" class="form-label"></label>
                    <input type="text" class="form-control" name="nome" id="nome" placeholder="Nome" />
                    <div class="invalid-feedback"></div>
                </div>

                <div class="cadastro">
                    <label for="sobrenome" class="form-label"></label>
                    <input type="text" class="form-control" name="sobrenome" id="sobrenome" placeholder="Sobrenome" />
                    <div class="invalid-feedback"></div>
                </div>

                <div class="cadastro">
                    <label for="email" class="form-label"></label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="E-mail" />
                    <div class="invalid-feedback"></div>
                </div>

                <div class="cadastro">
                    <label for="email" class="form-label"></label>
                    <input type="email" class="form-control" name="confirmeEmail" id="confirmeEmail" placeholder="Confirme seu e-mail" />
                    <div class="invalid-feedback"></div>
                </div>

                <div class="cadastro">
                    <label for="password" class="form-label"></label>
                    <input type="password" class="form-control" name="senha" id="senha" placeholder="Senha" />
                    <div class="invalid-feedback"></div>
                </div>

                <div class="cadastro">
                    <label for="password" class="form-label"></label>
                    <input type="password" class="form-control" name="confirmeSenha" id="confirmeSenha" placeholder="Confirme sua senha" />
                    <div class="invalid-feedback"></div>
                </div>

                <div class="btn_cliente">
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>

            </form>
        </div>
    </div>


    <%- include("./partials/footer") %>